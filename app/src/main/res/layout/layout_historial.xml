<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#feac00"
    android:backgroundTint="#feac00"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#feac00"
        android:backgroundTint="#feac00">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="195dp">

                <ImageView
                    android:id="@+id/imagenEvento"
                    android:background="@drawable/evento3"
                    android:layout_width="match_parent"
                    android:scaleType="matrix"
                    android:layout_height="195dp"/>


                <RelativeLayout
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_margin="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="#feac00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagenCalificacionEvento"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/ic_menu_send"
                        android:layout_width="15dp"
                        android:layout_height="14dp"/>

                    <TextView
                        android:id="@+id/calificacionEvento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="63dp"
                        android:fontFamily="@font/fonts"
                        android:text="78%"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/calificacionesContadasEvento"
                        android:text="23023 calificaciones"
                        android:textSize="10sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/calificacionEvento"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/fonts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tituloEvento"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="148dp"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/fonts"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="Evento"
                    android:textColor="#FFFF"
                    android:textSize="18sp" />

            </RelativeLayout>


            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fd9109"
                android:backgroundTint="#fd9109">

                <ImageView
                    android:id="@+id/fondo"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_alignStart="@+id/tituloEvento"

                    android:layout_marginStart="-10dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:background="#feac00" />

                <ImageButton
                    android:id="@+id/iB1"
                    android:layout_width="64dp"
                    android:layout_height="62dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="319dp"
                    android:layout_marginRight="319dp"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@mipmap/estrella2_foreground" />

                <ImageButton
                    android:id="@+id/iB2"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_alignStart="@+id/fondo"
                    android:layout_alignLeft="@+id/fondo"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="87dp"
                    android:layout_marginLeft="87dp"
                    android:layout_marginEnd="243dp"
                    android:layout_marginRight="243dp"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@mipmap/estrella2_foreground" />

                <ImageButton
                    android:id="@+id/iB3"
                    android:layout_width="68dp"
                    android:layout_height="67dp"
                    android:layout_alignStart="@+id/fondo"
                    android:layout_alignLeft="@+id/fondo"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="161dp"
                    android:layout_marginLeft="161dp"
                    android:layout_marginEnd="175dp"
                    android:layout_marginRight="175dp"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@mipmap/estrella2_foreground" />

                <ImageButton
                    android:id="@+id/iB4"
                    android:layout_width="73dp"
                    android:layout_height="69dp"
                    android:layout_alignStart="@+id/fondo"
                    android:layout_alignLeft="@+id/fondo"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="224dp"
                    android:layout_marginLeft="224dp"
                    android:layout_marginEnd="108dp"
                    android:layout_marginRight="108dp"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@mipmap/estrella2_foreground" />

                <ImageButton
                    android:id="@+id/iB4"
                    android:layout_width="75dp"
                    android:layout_height="68dp"
                    android:layout_alignStart="@+id/fondo"
                    android:layout_alignLeft="@+id/fondo"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="296dp"
                    android:layout_marginLeft="296dp"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@mipmap/estrella2_foreground" />

            </RelativeLayout>

            <TextView
                android:background="#414141"
                android:layout_marginBottom="7dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>