<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="195dp">

                <ImageView
                    android:id="@+id/imagenEvento"
                    android:background="@drawable/evento3"
                    android:layout_width="match_parent"
                    android:scaleType="matrix"
                    android:layout_height="195dp"/>

                <TextView
                    android:id="@+id/textoNuevoEvento"
                    android:background="#1C9603"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:width="80dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:text="Nuevo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <RelativeLayout
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_margin="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/degradado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagenCalificacionEvento"
                        android:layout_marginRight="6dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/ic_menu_send"
                        android:layout_width="15dp"
                        android:layout_height="14dp"/>

                    <TextView
                        android:id="@+id/calificacionEvento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="63dp"
                        android:layout_toRightOf="@id/imagenCalificacionEvento"
                        android:text="78%"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/calificacionesContadasEvento"
                        android:text="23023 calificaciones"
                        android:textSize="10sp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/calificacionEvento"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fondo"
                    android:layout_width="396dp"
                    android:layout_height="54dp"
                    android:layout_alignStart="@+id/tituloEvento"
                    android:layout_alignLeft="@+id/tituloEvento"
                    android:layout_marginStart="-10dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/degradado" />

                <TextView
                    android:id="@+id/tituloEvento"
                    android:textSize="18sp"
                    android:textColor="#1A1A1A"
                    android:text="Evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/descripcionEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tituloEvento"
                    android:layout_marginTop="0dp"
                    android:text="Descripcion" />

                <Button
                    android:id="@+id/botonDetallesEvento"
                    android:layout_alignParentRight="true"
                    android:text="Ver detalles"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                android:background="#414141"
                android:layout_marginBottom="7dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>