<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#feac00"
    tools:context=".Activities.Reservas">


    <ScrollView
        android:layout_width="347dp"
        android:layout_height="393dp"
        android:layout_x="31dp"
        android:layout_y="159dp">

        <LinearLayout
            android:id="@+id/llPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFDF2662"
            android:orientation="vertical" />
    </ScrollView>

    <Spinner
        android:id="@+id/spLocalidad"
        android:layout_width="349dp"
        android:layout_height="44dp"
        android:layout_x="30dp"
        android:layout_y="99dp"
        android:outlineSpotShadowColor="#FFFF"
        android:background="@drawable/btndetalles"
        android:foregroundTint="#FFFF"
        android:foregroundTintMode="src_in"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="197dp"
        android:layout_height="36dp"
        android:layout_x="106dp"
        android:layout_y="38dp"
        android:fontFamily="@font/fonts"
        android:textColor="#FFF"
        android:textSize="20dp"

        android:text="Seleccione Localidad"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnReserva"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_x="67dp"
        android:layout_y="576dp"
        android:background="@drawable/btndetalles"
        android:fontFamily="@font/fonts"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Anular asientos seleccionados"
        android:textColor="@drawable/txtbtninicio" />


</AbsoluteLayout>