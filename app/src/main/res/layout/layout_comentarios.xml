<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#feac00"
    android:backgroundTint="#feac00"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#feac00"
        android:backgroundTint="#feac00">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:background="#fd9109"
                android:backgroundTint="#fd9109"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/fondo"
                    android:layout_width="394dp"
                    android:layout_height="42dp"
                    android:layout_alignStart="@+id/tituloEvento"
                    android:layout_alignLeft="@+id/tituloEvento"
                    android:layout_marginStart="-10dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:background="#feac00" />

                <TextView
                    android:id="@+id/nombreUsuarioComentario"
                    android:layout_width="256dp"
                    android:layout_height="53dp"
                    android:layout_alignStart="@+id/fondo"
                    android:layout_alignLeft="@+id/fondo"
                    android:layout_alignEnd="@+id/fondo"
                    android:layout_alignRight="@+id/fondo"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="128dp"
                    android:layout_marginRight="128dp"
                    android:fontFamily="@font/fonts"
                    android:padding="10dp"
                    android:text="Nombre usuario"
                    android:textColor="#FFFF"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/calificacionComentarioEvento"
                    android:layout_width="119dp"
                    android:layout_height="51dp"
                    android:layout_alignStart="@+id/fondo"
                    android:layout_alignLeft="@+id/fondo"
                    android:layout_alignEnd="@+id/fondo"
                    android:layout_alignRight="@+id/fondo"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="275dp"
                    android:layout_marginLeft="275dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:fontFamily="@font/fonts"
                    android:padding="10dp"
                    android:text="Calificacion"
                    android:textColor="#FFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/comentarioEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/fonts"
                    android:paddingLeft="20dp"
                    android:text="Comentario"
                    android:textColor="#ffff" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>